{# templates/author/add.html.twig #}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Author</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f0f8ff;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .form-container {
            background: #ffffff;
            border-radius: 15px;
            padding: 20px;
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
            max-width: 800px;
            margin: 40px auto;
            position: relative;
        }

        h1 {
            text-align: center;
            color: #007bff;
            margin-bottom: 20px;
        }

        .form-button {
            text-align: center;
            margin-top: 30px;
            /* Add margin to move the button down */
        }

        .back-link {
            margin-top: 20px;
            display: inline-block;
            padding: 10px 20px;
            border-radius: 30px;
            background-color: #007bff;
            color: white;
            text-decoration: none;
            transition: background-color 0.3s ease;
        }

        .back-link:hover {
            background-color: #0056b3;
        }

        .btn-custom {
            padding: 5px 15px;
            /* Smaller padding for a smaller button */
            font-size: 14px;
            /* Adjust font size to make it smaller */
        }
    </style>
</head>

{% block body %}
<div class="container">
    <div class="form-container">
        <h1 class="form-title">Add Author</h1>

        <div class="form-wrapper">
            {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}

            <div class="form-group">
                {{ form_label(form.username, null, {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.username, {'attr': {'class': 'form-control', 'placeholder': 'Nom d\'utilisateur'}})
                }}
                {{ form_errors(form.username) }}
            </div>

            <div class="form-group">
                {{ form_label(form.email, null, {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.email, {'attr': {'class': 'form-control', 'placeholder': 'Adresse e-mail'}}) }}
                {{ form_errors(form.email) }}
            </div>


            <div class="form-button">
                {{ form_widget(form.save, {'attr': {'class': 'btn btn-success btn-lg btn-custom'}}) }}
            </div>

            {{ form_end(form) }}
        </div>
    </div>
</div>
<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"></script>
{% endblock %}

</html>